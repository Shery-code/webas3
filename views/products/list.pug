extends ../layout
block content
    
    h1=title        
    table.table
        thead   
            tr
                th Name
                th Price
                th Action
        tbody
            each product in products
                tr 
                    td=product.name
                    td=product.price
                    td
                        a(href="/products/delete/"+product._id, class="btn btn-danger") Delete
                        a(href="/products/edit/"+product._id, class="btn btn-warning") Edit
    a(href="/products/add", class="btn btn-success float-left") Add new product